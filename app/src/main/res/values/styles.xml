<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/LightGrey</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/my_custom_font</item>
    </style>
    <style name="productTitleList" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/title_product_list</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="productPriceList" parent="productTitleList">
        <item name="android:textSize">@dimen/price_product_list</item>
    </style>

    <style name="productPriceDetail" parent="productTitleList">
        <item name="android:textSize">@dimen/price_product_detail</item>
    </style>

    <style name="hasStockDetail" parent="productTitleList">
        <item name="android:textSize">@dimen/has_stock_product_list</item>
    </style>

    <style name="freeShippingList" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/free_shipping_product_list</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="button_grey" parent = "@style/Widget.AppCompat.Button">
        <item name="android:background">@color/LightGrey</item>
        <item name="android:textAlignment">4</item>
    </style>

    <style name="button_blue" parent = "@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/light_blue</item>
    </style>
</resources>
