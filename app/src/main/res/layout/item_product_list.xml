<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_x5"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/margin_x5">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="@dimen/margin_x100"
        android:layout_height="@dimen/margin_x100"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_x10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/productTitleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x10"
            android:layout_marginBottom="@dimen/margin_x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                style="@style/productPriceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_sale"
                style="@style/freeShippingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_x5"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_installments"
            style="@style/freeShippingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_x5"
            android:text="@string/installments"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_free_shipping"
            style="@style/freeShippingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/free_shipping"
            android:textColor="@color/green"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x10"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rb_stars_number"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:progressTint="@color/black" />

            <TextView
                android:id="@+id/tv_comments_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_x5"
                android:gravity="center"
                android:text="123"
                android:textSize="@dimen/comments_number_product_list" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>